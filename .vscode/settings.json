{
    // Path to your CMake executable, adjust if necessary
    "cmake.cmakePath": "/usr/local/bin/cmake",

    // Automatically configure the project when opened
    "cmake.configureOnOpen": true,

    // Specify the CMake generator you prefer, e.g., Ninja or Unix Makefiles
    "cmake.generator": "Unix Makefiles",

    // Define the build directory for CMake
    "cmake.buildDirectory": "${workspaceFolder}/build",

    // Use CMake Tools extension to provide IntelliSense configuration
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // Specify the C++ compiler explicitly
    "cmake.configureArgs": [
        "-DCMAKE_CXX_COMPILER=clang++"
    ],

    // Define the environment variable to use C++23 standard
    "cmake.environment": {
        "CXXFLAGS": "-std=c++20"
    },

    // Additional compiler flags for CMake to use C++23 standard
    "cmake.buildArgs": [
        "-DCMAKE_CXX_STANDARD=20"
    ],

    // Optionally, adjust logging level for more details during configuration
    "cmake.loggingLevel": "debug",
    "editor.tabSize": 4,

    "files.associations": {
        "iosfwd": "cpp",
        "__bit_reference": "cpp",
